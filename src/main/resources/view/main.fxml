<Pane fx:id="mainPane" prefHeight="600.0" prefWidth="600.0" stylesheets="@/css/styles.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="todoList.controller.MainController">
   <children>
      <Label id="title" layoutX="261.0" layoutY="55.0" text="Jeyp Todo List" />
      <ImageView fitHeight="98.0" fitWidth="60.0" layoutX="189.0" layoutY="48.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@/img/lista.png" />
         </image>
      </ImageView>
      <TextField fx:id="newTaskField" layoutX="106.0" layoutY="138.0" onAction="#addTask" prefHeight="40.0" prefWidth="340.0" />
      <Button fx:id="addButton" layoutX="442.0" layoutY="138.0" mnemonicParsing="false" onAction="#addTask" prefHeight="40.0" prefWidth="50.0" text="+" />
      <ScrollPane hbarPolicy="NEVER" layoutX="97.0" layoutY="222.0" prefHeight="350.0" prefWidth="430.0">
         <content>
            <VBox fx:id="taskList" spacing="10.0" />
         </content>
      </ScrollPane>
   </children>
</Pane>
